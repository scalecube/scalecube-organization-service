<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%level{length=1}|%date{MMdd-HHmm:ss,SSS}|%thread|%logger{1.}|%message %n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="io.scalecube" level="info"/>
        <Logger name="io.scalecube.transport" level="WARN"/>
        <Logger name="io.netty" level="info"/>
        <Root level="DEBUG">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>

</Configuration>